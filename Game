<body>

    <h1>Rock Paper Scissors</h1>

    <!-- Output container for styled content -->
    <div id="output"></div>


    <div class="container">

        <!-- Rock button -->
        <button onclick="move('rock')">Rock</button>

        <!-- Paper button -->
        <button onclick="move('paper')">Paper</button>

        <!-- Scissors button -->
        <button onclick="move('scissors')">Scissors</button>

    </div>


    <!-- JS -->
    <script>



        function getComputerMove() {
            const randomNumber = Math.random();
            //  document.write(randomNumber);


            if (randomNumber < 1 / 3) return 'rock';

            if (randomNumber < 2 / 3) return 'paper';

            return 'scissors';

        }


        function determineWinner(userMove, computerMove) {
            if (userMove === computerMove) return 'Tie';

            if (
                (userMove === 'rock' && computerMove === 'scissors') ||
                (userMove === 'paper' && computerMove === 'rock') ||
                (userMove === 'scissors' && computerMove === 'paper')

            ) return 'You Win';
            return 'You Lose';

        }


        function move(userMove) {

            const computerMove = getComputerMove();

            console.log('User Move:', userMove); // Debugging
            console.log('Computer Move:', computerMove); // Debugging


            const result = determineWinner(userMove, computerMove);



            document.getElementById('output').innerHTML = `
                <div style="font-size: 20px;">
                    You picked <strong>${userMove}</strong>. 
                Computer picked <strong>${computerMove}</strong>. 
                <br>Result: <strong>${result}</strong>.
                    
                </div>`;


            alert(`You picked ${userMove}. Computer picked ${computerMove}. ${result}`);
        }

    </script>
